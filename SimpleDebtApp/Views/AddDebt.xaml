<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleDebtApp.Views.AddDebt"
             Title="AddDebt">
    <VerticalStackLayout Padding="20" Spacing="10">
        <!-- Header -->
        <Label Text="إضافة دين جديد"
               TextColor="White"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               BackgroundColor="#2E7D32"
               Padding="10" />

        <!-- Input Fields -->
        <Entry x:Name="DebtorNameEntry"
               Placeholder="اسم المدين"
               PlaceholderColor="#B0BEC5"
               TextColor="#212121"
               HeightRequest="40" />
        <Entry x:Name="AmountEntry"
               Placeholder="المبلغ (ريال)"
               PlaceholderColor="#B0BEC5"
               TextColor="#212121"
               Keyboard="Numeric"
               HeightRequest="40" />
        <Button x:Name="AddDebtButton"
                Text="إضافة"
                HeightRequest="40"
                Clicked="AddDebtButton_Clicked" />
    </VerticalStackLayout>
</ContentPage>